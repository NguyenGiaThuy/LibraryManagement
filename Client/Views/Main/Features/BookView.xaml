<Window x:Class="Client.Views.Main.Features.BookView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Main.Features"
        mc:Ignorable="d"
        Title="BookView" Height="600" Width="900"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" 
                    BorderThickness="1"
                    BorderBrush="Gray"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="10">
                <Image Name="BookImg"
                       Source="https://m.media-amazon.com/images/I/41Ln0mEFcdL._AC_SY780_.jpg"/>
            </Border>

            <Grid Grid.Row="1"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Margin="10,0,10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Name:"
                           Margin="0,0,0,5"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBox Grid.Row="1" 
                         Name="BookNameTxt"
                         Text="Calculus (8th Edition)"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Style="{StaticResource ParagraphTextbox}"/>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="82"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Author"
                           Grid.Column="0"
                           Grid.Row="0"
                           Margin="10,5,10,5"
                           Style="{StaticResource PropertyLabelTextBlock}"/>
                <TextBlock Text="Publisher"
                           Grid.Column="0"
                           Grid.Row="1"
                           Margin="10,5,10,5"
                           Style="{StaticResource PropertyLabelTextBlock}"/>
                <TextBlock Text="Language"
                           Grid.Column="0"
                           Grid.Row="2"
                           Margin="10,5,10,5"
                           Style="{StaticResource PropertyLabelTextBlock}"/>
                <TextBlock Text="Pages"
                           Grid.Column="0"
                           Grid.Row="3"
                           Margin="10,5,10,5"
                           Style="{StaticResource PropertyLabelTextBlock}"/>
                <TextBlock Text="ISBN"
                           Grid.Column="0"
                           Grid.Row="4"
                           Margin="10,5,10,5"
                           Style="{StaticResource PropertyLabelTextBlock}"/>
                <TextBlock Text="Genre"
                           Grid.Column="0"
                           Grid.Row="5"
                           Margin="10,5,10,5"
                           Style="{StaticResource PropertyLabelTextBlock}"/>

                <TextBox Name="AuthorTxt"
                         Text="James Stewart"
                         Grid.Column="1"
                         Grid.Row="0"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Margin="0,2,10,2"
                         Style="{StaticResource PropertyTextbox}"/>
                <TextBox Name="PublisherTxt"
                         Text="Cengage Learning; 8th edition (May 19, 2015)"
                         Grid.Column="1"
                         Grid.Row="1"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Margin="0,2,10,2"
                         Style="{StaticResource PropertyTextbox}"/>
                <TextBox Name="LanguageTxt"
                         Text="English"
                         Grid.Column="1"
                         Grid.Row="2"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Margin="0,2,10,2"
                         Style="{StaticResource PropertyTextbox}"/>
                <TextBox Name="PagesTxt"
                         Text="1392"
                         Grid.Column="1"
                         Grid.Row="3"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Margin="0,2,10,2"
                         Style="{StaticResource PropertyTextbox}"/>
                <TextBox Name="ISBNTxt"
                         Text="1285740629"
                         Grid.Column="1"
                         Grid.Row="4"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Margin="0,2,10,2"
                         Style="{StaticResource PropertyTextbox}"/>
                <TextBox Name="GenreTxt"
                         Text="Mathematics"
                         Grid.Column="1"
                         Grid.Row="5"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Margin="0,2,10,2"
                         Style="{StaticResource PropertyTextbox}"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="2" 
              Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <TextBox Name="BookSearchTxt"
                         Grid.Column="0"
                         Style="{StaticResource SearchboxTheme}"
                         Margin="10,10,0,10" />

                <Button Name="BookNewBtn"
                    Grid.Column="1"
                    Content="New"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Height="40"
                    Margin="10,0,5,0"
                    Padding="5"/>
                <Button Name="BookUpdateBtn"
                    Grid.Column="2"
                    Content="Update"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="5,0,5,0"
                    Height="40"
                    Padding="5"/>
                <Button Name="BookRemoveBtn"
                    Grid.Column="3"
                    Content="Remove"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="5,0,5,0"
                    Height="40"
                    Padding="5"/>
                <Button Name="BookReportBtn"
                    Grid.Column="4"
                    Content="Report"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="5,0,10,0"
                    Height="40"
                    Padding="5"/>
            </Grid>

            <DataGrid Name="BookDataGrid"
                      Grid.Row="1"
                      VerticalAlignment="Stretch"
                      VerticalScrollBarVisibility="Visible"
                      HorizontalAlignment="Stretch" 
                      HorizontalContentAlignment="Stretch"
                      HorizontalScrollBarVisibility="Visible"
                      Margin="10,0,10,10"
                      BorderThickness="1"
                      AlternatingRowBackground="#FF929191"
                      ColumnWidth="auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Book name" MinWidth="50" Width="2.25*" Binding="{Binding ID}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Author" MinWidth="50" Width="1*" Binding="{Binding Type}"></DataGridTextColumn>
                    <DataGridTextColumn Header="ISBN" MinWidth="50" Width="1*" Binding="{Binding ISBN}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Publisher" MinWidth="50" Width="1.5*" Binding="{Binding MemID}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Received date" MinWidth="50" Width="1.5*" Binding="{Binding AA}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Receiver" MinWidth="50" Width="1.5*" Binding="{Binding Curr}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Price" MinWidth="50" Width="1*" Binding="{Binding Exp}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Status" MinWidth="50" Width="1*" Binding="{Binding CR}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
