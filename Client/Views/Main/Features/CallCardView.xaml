<Window x:Class="Client.Views.Main.Features.CallCardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views.Main.Features"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="CallCardView" Height="700" Width="1100">
    <Grid>
        <Border Background="White"
            CornerRadius="0">
            <Grid>
                <Button 
                Name="ExitBtn"
                Width="20" Height="20" 
                Margin="0,15,15,0"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Background="Transparent"
                Content="X"
                FontFamily="Berlin Sans FB Demi"
                Foreground="Black"
                Padding="0"
                Click="ExitBtn_Click">
                </Button>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150*"/>
                        <ColumnDefinition Width="400*"/>
                        <ColumnDefinition Width="110*"/>
                        <ColumnDefinition Width="110*"/>
                        <ColumnDefinition Width="110*"/>
                        <ColumnDefinition Width="110*"/>

                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          Background="#DCDCDC">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="250*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Hello,"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Foreground="Black"
                        FontSize="16"
                        Margin="5,6,0,0"/>

                        <StackPanel Grid.Row="1">

                            <RadioButton Content="Dasboard"
                             Foreground="black"
                             FontSize="16"
                             Height="70"
                             Style="{StaticResource VerticalMenuTheme}"/>


                            <RadioButton Content="Book Database"
                             Foreground="Black"
                             FontSize="16"
                             Height="70"
                             Style="{StaticResource VerticalMenuTheme}"/>

                            <RadioButton Content="Member Database"
                             Foreground="Black"
                             FontSize="16"
                             Height="50"
                             Style="{StaticResource VerticalMenuTheme}"/>

                            <RadioButton Content="Call Cards"
                             Foreground="Black"
                             FontSize="16"
                             Height="50"
                             Style="{StaticResource VerticalMenuTheme}"/>
                        </StackPanel>

                        <GridSplitter Width="5" 
                                      Height="700"
                                      HorizontalAlignment="Stretch" 
                                      Margin="146,0,0,0" 
                                      Grid.RowSpan="2" />

                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="250*"/>
                        </Grid.RowDefinitions>


                        <TextBox
                               Width="416"
                               Height="80"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="18,0,0,0"
                               Style="{StaticResource SearchboxTheme}"/>

                    </Grid>

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="250*"/>
                        </Grid.RowDefinitions>

                        <RadioButton Grid.Column="3"
                            Content="New"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            FontSize="16"
                           
                            Style="{StaticResource HorizontalMenuTheme}" 
                            Margin="0,50,0,50" Width="90"/>
                    </Grid>

                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="250*"/>
                        </Grid.RowDefinitions>


                        <RadioButton Grid.Column="5"
                            Content="Update"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            
                            Style="{StaticResource HorizontalMenuTheme}" 
                            Margin="0,50,0,50" Width="90"/>
                    </Grid>


                    <Grid Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="250*"/>
                        </Grid.RowDefinitions>

                        <RadioButton Grid.Column="5"
                            Content="Remove"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            
                            Style="{StaticResource HorizontalMenuTheme}" 
                            Margin="0,50,0,50" Width="90"/>
                    </Grid>

                    <Grid Grid.Column="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"/>
                            <RowDefinition Height="250*"/>
                        </Grid.RowDefinitions>

                        <RadioButton Grid.Column="6"
                            Content="Report"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            
                            Style="{StaticResource HorizontalMenuTheme}" 
                            Margin="0,50,0,50" Width="90"/>
                    </Grid>

                    <DataGrid Grid.Column="1" 
                              Grid.ColumnSpan="6" 
                              HorizontalAlignment="Left" 
                              Height="568" Margin="21,106,0,0" 
                              VerticalAlignment="Top" 
                              Width="904" 
                              BorderThickness="1"
                              CanUserResizeColumns="True"
                              SelectionChanged="DataGrid_SelectionChanged" FontWeight="Bold" FontStretch="Normal" 
                              AutoGenerateColumns="False"                                
                              ColumnHeaderHeight="50" 
                              AlternatingRowBackground="#FF929191">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="50" Binding="{Binding ID}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Name" Width="80" Binding="{Binding Name}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Email" Width="80" Binding="{Binding Email}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Arrear amount" Width="50" Binding="{Binding AM}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Days in arrear" Width="50" Binding="{Binding ID}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Created date" Width="80" Binding="{Binding Name}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Expiration data" Width="80" Binding="{Binding Email}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Membership type" Width="50" Binding="{Binding AM}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>


            </Grid>
        </Border>
    </Grid>
</Window>
